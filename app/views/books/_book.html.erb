<div id="<%= dom_id book %>" class="border border-gray-200 rounded-lg shadow-md overflow-hidden w-full px-3 hover:brightness-75">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= book.title %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Author:</strong>
    <%= book.author %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Price:</strong>
    <%= book.price %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Published date:</strong>
    <%= book.published_date %>
  </p>
</div>
